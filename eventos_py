from datetime import datetime

eventos = []

def registrar_evento():
    print("\n== Registrar Evento ==")
    nome = input("Nome do evento: ").strip()
    descricao = input("Descrição: ").strip()
    local = input("Local: ").strip()
    
    data_input = input("Data (dd/mm/aaaa): ").strip()
    try:
        data = datetime.strptime(data_input, "%d/%m/%Y").strftime("%d/%m/%Y")
    except ValueError:
        print("Data inválida. Digite no formato dd/mm/aaaa.")
        return

    tipo = input("Tipo (arrecadacao/resgate/campanha): ").strip().lower()
    if tipo not in ("arrecadacao", "resgate", "campanha"):
        print("Tipo inválido. Digite 'arrecadacao', 'resgate' ou 'campanha'.")
        return

    evento = {
        "nome": nome,
        "descricao": descricao,
        "data": data,
        "local": local,
        "tipo": tipo
    }

    eventos.append(evento)
    print("Evento registrado com sucesso!")

def listar_eventos():
    if not eventos:
        print("Nenhum evento registrado.")
        return
    print("\n== Eventos Registrados ==")
    for i, e in enumerate(eventos, 1):
        print(f"{i}. Nome: {e['nome']} - Descrição: {e['descricao']} - Data: {e['data']} - Local: {e['local']} - Tipo: {e['tipo']}")

def menu():
    while True:
        print("\n1 - Registrar evento")
        print("2 - Listar eventos")
        opcao = input("Escolha: ").strip()
        if opcao == "1":
            registrar_evento()
        elif opcao == "2":
            listar_eventos()
        else:
            print("Opção inválida.")

menu()
